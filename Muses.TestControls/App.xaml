<Application
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Classic" xmlns:Primitives="clr-namespace:System.Windows.Controls.Ribbon.Primitives;assembly=System.Windows.Controls.Ribbon" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Muses.TestControls.App"
             xmlns:muses="clr-namespace:Muses.Wpf.Controls;assembly=Muses.Wpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Muses.Wpf;component/Themes/Dark.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="MyWindowButton" BasedOn="{StaticResource WindowButtonStyle}" TargetType="{x:Type Button}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type muses:BaseWindow}}, Path=FillTitleBar}" Value="True">
                        <Setter Property="Foreground" Value="{DynamicResource AccentForegroundColorBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
